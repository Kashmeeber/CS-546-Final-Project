<div class="resize">
    <ul id="navbar">
        <li id="left"><a href="/homepage" class="nav-item">Home</a></li>
        <li><a href="/profile" class="nav-item">Profile</a></li>
        <li><a href="/trips" class="nav-item">Plan a trip</a></li>
        <li id="right"><a href="/logout" class="nav-item">Logout</a></li>
    </ul>
</div>
<div id="createItinerary">
    <div id="error">
        <p id="serverErr">{{error}}</p>
    </div>
    <form action="/trips/itinerary/{{currentTrip}}" method="POST" id="createItineraryForm">
        <p class="text">Name of Activity:</p>
        <label for="activityInput">
            <input name="activityInput" id="activityInput" type="text">
        </label>
        <p></p>
        <div class="password">Date of Activity:
            <span class="tooltiptext">
                - must be in the format
                MM/DD/YYYY
            </span>
        </div>
        <p></p>
        <label for="dateInput">
            <input id="dateInput" name="dateInput" type="text">
        </label>
        <p></p>
        <div class="password">Start Time of Activity:
            <p></p>
            <span class="tooltiptext">
                - must use military time
                - must be in the format HH:MM
            </span>
        </div>
        <label for="activityStartTimeInput">
            <input id="activityStartTimeInput" name="activityStartTimeInput" type="text">
        </label>
        <p></p>
        <div class="password">End Time of Activity:
            <p></p>
            <span class="tooltiptext">
                - must use military time
                - must be in the format HH:MM
            </span>
        </div>
        <label for="activityEndTimeInput">
            <input id="activityEndTimeInput" name="activityEndTimeInput" type="text">
        </label>
        <p class="text">Estimated Cost:</p>
        <label for="costInput">
            <input id="costInput" name="costInput" type="text">
        </label>
        <p class="text">Notes:</p>
        <label for="notesInput">
            <input id="notesInput" name='notesInput' type="text">
        </label>
        <label for="create-itinerary-button" class="submitButton">
            <button type="submit" name="create-itinerary-button" id="create-itinerary-button">Submit</button>
        </label>
    </form>
</div>