<p id="serverErr">{{error}}</p>
<div id="error" hidden></div>

<div id="editItinerary">
    <form action="/trips/edititinerary/{{currentTrip}}/{{currentIt}}" method="POST" id="editItineraryForm">
        <label for="activityInput">Name of Activity:
            <input name="activityInput" id="activityInput" type="text">
        </label>
        <label for="dateInput">Date of Activity:
            <input id="dateInput" name="dateInput" type="text">
        </label>
        <label for="activityStartTimeInput">Start Time for Activity:
            <input id="activityStartTimeInput" name="activityStartTimeInput" type="text">
        </label>
        <label for="activityEndTimeInput">End Time for Activity:
            <input id="activityEndTimeInput" name="activityEndTimeInput" type="text">
        </label>
        <label for="costInput">Estimated Cost:
            <input id="costInput" name="costInput" type="text">
        </label>
        <label for="notesInput">Notes:
            <input id="notesInput" name='notesInput' type="textarea">
        </label>
        <input type="hidden" name="_method" value="PUT">
        <button type="submit">Submit</button>
    </form>
</div>
