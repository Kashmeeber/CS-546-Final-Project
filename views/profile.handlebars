<div id="float-container">
    <img src="https://cdn.pixabay.com/photo/2020/02/10/08/56/emoji-4835770_1280.png" alt="its you :)" id="pfp">
    <div>
        {{!-- spacer --}}
    </div>
    <div id="info">
        <p class="profile">First Name: {{firstNameInput}}</p>
        <p class="profile">Last Name: {{lastNameInput}}</p>
        <p class="profile">Email Address: {{emailAddressInput}}</p>
    </div>
</div>
<div>

</div>
<p>My Trips: </p>
{{#each trips}}
    <div class="trips">
        <div class="content">
            <p>Name of Trip: {{this.name}}</p>
            <p>Start Location: {{this.start_location}}</p>
            <p>Start Date: {{this.start_date}}</p>
            <p>Start Time: {{this.start_time}}</p>
            <p>End Location: {{this.end_location}}</p>
            <p>End Date: {{this.end_date}}</p>
            <p>End Time: {{this.end_time}}</p>
            <p>Stops:</p>
            {{#each this.stops}}
                <p>{{this}}</p>
            {{/each}}
            <p>Things To Do:</p>
            {{#each this.to_do}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{!-- <p>{{this.usersAllowed}}</p> --}}
    </div>

{{/each}}

{{! link to trips }}
{{! link to logout }}
{{! filter trips }}
