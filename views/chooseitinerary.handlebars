<p id="serverErr">{{error}}</p>
<div id="error" hidden></div>
{{#if trips.length}}
<form id="selection2" action="/trips/edititinerary/{{currentTrip}}" method="POST">
    <p>choose the itinerary you want to edit: </p>
    <select name="activityName" id="activityName">
        {{#each trips}}
            <option value="{{this.activityName}}">{{this.activityName}}</option>
        {{/each}}
    </select>
    <label for="submit">
        <button type="submit" name="submit" id="submit">Submit</button>
    </label>
    </form>
{{else}}
    <a href="/trips/itinerary">create an itinerary first!</a>

{{/if}}
