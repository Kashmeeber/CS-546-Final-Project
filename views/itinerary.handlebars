<p id="serverErr">{{error}}</p>
<div id="error" hidden></div>
<form id="selection" action="/trips/itinerary" method="POST">
    <select name="tripName" id="tripName" >
        {{#each trips}}
            <option value="{{this.name}}">{{this.name}}</option>
        {{/each}}
    </select>
    <button id="submit" onclick="">Submit</button>

</form>


<script>
   document.getElementById('tripName').addEventListener('change', function() {
  console.log('You selected: ', this.value);
});
</script>